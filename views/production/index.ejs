<!DOCTYPE html>
<html>
<head>
    <title>Dollar rate</title>
    <link rel="stylesheet" href="/dist/styles.min.css">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-8">
            <h2>Interval: <%= interval / 60000 %> min</h2>
        </div>
        <div class="col-4">
            <span class="float-right"><%= mode %> mode: (v<%= version %>)</span>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2>Rate history:</h2>
            <div class="table-container">
                <table class="table table-sm">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Timestamp</th>
                        <th scope="col">Currency</th>
                        <th scope="col">Buy</th>
                        <th scope="col">Sale</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% rates.forEach(function(rate){ %>
                    <tr>
                        <th scope="row"><%= rate.row %></th>
                        <td><%= rate.timestamp %></td>
                        <td><%= rate.currency %></td>
                        <td><%= rate.buy %></td>
                        <td><%= rate.sale %></td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-6">
            <h2>Operation log:</h2>
            <div class="table-container">
                <table class="table table-sm">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">OperationId</th>
                        <th scope="col">Timestamp</th>
                        <th scope="col">OperationName</th>
                        <th scope="col">Status</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% logs.forEach(function(log){ %>
                    <tr class="<%= log.status === 'ERROR' ? 'warning-row' : ''%>">
                        <th scope="row"><%= log.row %></th>
                        <td><%= log.operationId %></td>
                        <td><%= log.timestamp %></td>
                        <td><%= log.operationName %></td>
                        <td><%= log.status %></td>
                        <td><%= log.description %></td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/dist/scripts.min.js"></script>
</body>
</html>
